<div class="container">
  <div class="text-center">
    <h2>Edit your article</h2>
    <%= form_for(@article) do |f| %>
    <%= f.text_field :title, placeholder: "Enter your article name" %>
    <%= f.text_field :content, placeholder: "Enter your content here..." %>
    <%= f.submit class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
